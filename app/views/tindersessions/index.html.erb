<p id="notice"><%= notice %></p>

<h1>Listing Tindersessions</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Datetime</th>
      <th>Number of likes within session</th>
      <th>Number of dislikes within session</th>
      <th>Number of hotdogs within session</th>
      <th>Max set of dogs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tindersessions.each do |tindersession| %>
      <tr>
        <td><%= tindersession.uid %></td>
        <td><%= tindersession.datetime %></td>
        <td><%= tindersession.number_of_likes_within_session %></td>
        <td><%= tindersession.number_of_dislikes_within_session %></td>
        <td><%= tindersession.number_of_hotdogs_within_session %></td>
        <td><%= tindersession.max_set_of_dogs %></td>
        <td><%= link_to 'Show', tindersession %></td>
        <td><%= link_to 'Edit', edit_tindersession_path(tindersession) %></td>
        <td><%= link_to 'Destroy', tindersession, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

