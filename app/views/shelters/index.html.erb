<p id="notice"><%= notice %></p>

<h1>Listing Shelters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Contact url</th>
      <th>Hours url</th>
      <th>Map url</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shelters.each do |shelter| %>
      <tr>
        <td><%= shelter.name %></td>
        <td><%= shelter.address %></td>
        <td><%= shelter.contact_url %></td>
        <td><%= shelter.hours_url %></td>
        <td><%= shelter.map_url %></td>
        <td><%= shelter.latitude %></td>
        <td><%= shelter.longitude %></td>
        <td><%= shelter.phone %></td>
        <td><%= shelter.email %></td>
        <td><%= link_to 'Show', shelter %></td>
        <td><%= link_to 'Edit', edit_shelter_path(shelter) %></td>
        <td><%= link_to 'Destroy', shelter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

